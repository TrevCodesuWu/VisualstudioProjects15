@model IEnumerable<movie_rental_system.Models.Rent>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-family:Verdana;">Rent A Movie</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table style="border:1px solid grey;" class="table">
    <tr style="font-family:sans-serif; background:darkgrey;font-size:14px;">
        <th>
            @Html.DisplayNameFor(model => model.Customer.customer_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie.movie_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rental_fee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total_with_vat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.start_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.end_date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.customer_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.movie_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rental_fee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total_with_vat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.start_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.end_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.rent_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.rent_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.rent_id })
        </td>
    </tr>
}

</table>
