                @Html.EditorFor(model => model.movie_duration, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.movie_duration, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.movie_age_restriction, htmlAttributes: new { @class = "control-label col-md-2" })
