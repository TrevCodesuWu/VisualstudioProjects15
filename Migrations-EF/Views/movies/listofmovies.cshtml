@model IEnumerable<Migrations_EF.Models.Movie>
@{
    ViewBag.Title = "listofmovies";
}
<style>
    *{
        margin:0px; 
        padding:0px; 
        box-sizing:border-box; 
    }
    h2 {
        display:flex; 
        justify-content:center;
        font-size:25px; 
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; 
        text-shadow: 2px 2px 2px grey; 
       }
    th,td {
        padding:7px 18px; 
        border: 2px solid black;
        font-family:'Franklin Gothic'; 
    }
    th {
        font-size:18px; 
        background-color:lightgrey; 
    }
    td {
        font-size:14px; 
        background-color: white; 
        
    }
    td:hover {
        color:blue; 
        background-color: silver; 
     
    }
    p{
        font-family:'Viner Hand ITC'; 
        display:flex; 
        justify-content:center; 
        font-size:18px; 
        margin-top:20px; 
    }
    .styled{
        width:10%; 
        padding:10px 25px; 
        border:2px solid black; 
        border-radius:5px; 
        background-color:azure; 
    }
</style>

@if (!Model.Any())
{
    <p>hmm... there doesn't seem to be any movies as yet </p>
}else
{ 
    <h2>List of Movies</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Genre</th>
            <th>CRUD</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.movie_name,"InfoMovie","movies",new { id = item.movie_id } ,null)</td>
                <td>@item.Genre.genre_name</td>
                <td>@Html.ActionLink("Edit", "Edit", "movies", new { id = item.movie_id }, null)</td>
            </tr>
        }        
    </tbody>
</table>
<div class="styled">
    @Html.ActionLink("Create", "formData", "movies")
</div>

}
