@model IEnumerable<Migrations_EF.Models.Customer>
@{
    ViewBag.Title = "listofcust";
}

<style>
    th, td {
        padding: 5px 15px;
        border: 2px solid black;
        border-radius: 4px;
        font-family: 'Trebuchet MS';
    }

    th {
        background-color: lightgrey;
        font-size: 18px;
    }

    td {
        background-color: silver;
        font-size: 15px;
    }
</style>
<button class="btn btn-info">@Html.ActionLink("Create","New","Customer")</button>
@if(!Model.Any())
{
    <h3>Sorry there is no customers as yet...</h3>
}
 else {
       <h3>List of customers </h3>
        
        <table>
            <thead>
                <tr>
                    <th> Customer Name </th>
                    <th> Membership Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(item.name ,"Edit","Customer", new {id = item.id } , null)</td>
                        <td>@item.Membershiptypes.name</td>
                    </tr>
                }
                
            </tbody>
        </table>
      }

@Html.ActionLink("Home", "Index", "Home")