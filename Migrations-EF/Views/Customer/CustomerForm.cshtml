@model Migrations_EF.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
}

<h2>Index</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    @Html.ValidationSummary(true,"fill in the values")
 <div class="form-group">
     @Html.LabelFor(c => c.customer.name)
     @Html.TextBoxFor(c => c.customer.name, new { @class = "form-control" }) 
     @Html.ValidationMessageFor(c => c.customer.name)
 </div>
 <div class="form-group">
     @Html.LabelFor(c => c.customer.birthD)
     @Html.TextBoxFor(c => c.customer.birthD ,"{0:d MMM yyyy}", new { @class = "form-control" })
     @Html.ValidationMessageFor(c => c.customer.birthD)
 </div>
 <div class="form-group">
     @Html.CheckBoxFor(c => c.customer.isSubscribedToNewsLetter)
     @Html.LabelFor(c => c.customer.isSubscribedToNewsLetter)
     @Html.ValidationMessageFor(c => c.customer.isSubscribedToNewsLetter)
 </div>
 <div class="form-group">
     @Html.LabelFor(c => c.customer.MembershipTypesId)
     @Html.DropDownListFor(c => c.customer.MembershipTypesId,new SelectList(Model.memlist,"Id","name"),"Select Membership Types",new { @class="form-control"})
     @Html.ValidationMessageFor(c => c.customer.MembershipTypesId)
 </div>
 @Html.HiddenFor(c => c.customer.id)
 @Html.AntiForgeryToken()
 <button type="submit" class="btn btn-info">Create</button>
}

@section scripts 
    {

        @Scripts.Render("~/bundles/jqueryval")
    }
